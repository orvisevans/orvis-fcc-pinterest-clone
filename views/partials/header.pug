nav.navbar.navbar-expand-md.navbar-dark.bg-dark.static-top
  .navbar-header
    a.navbar-brand(href='/') Pin-Board
  button.navbar-toggler.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-controls='navbarsExampleDefault', aria-expanded='false', aria-label='Toggle navigation')
    span.navbar-toggler-icon
  #navbar.navbar-collapse.collapse
    ul.navbar-nav.mr-auto
      li(class=(title === 'New Pin') ? 'active' : undefined)
        a.nav-link(href='/new-pin') New Pin
    ul.nav.navbar-nav.navbar-right
      if !user
        li(class=(title === 'Login') ? 'active' : undefined)
          a.nav-link(href='/login') Login
        li(class=(title === 'Create Account') ? 'active' : undefined)
          a.nav-link(href='/signup') Create Account
      else
        li.dropdown(class=(title === 'Account Management') ? 'active' : undefined)
          a.dropdown-toggle(href='#', data-toggle='dropdown')
            if user.profile.picture
              img(src=user.profile.picture)
            else
              img(src="")
            span= user.profile.name || user.email || user.id
            i.caret
          ul.dropdown-menu
            li
              a.nav-link(href='/account') My Account
            li.divider
            li
              a.nav-link(href='/logout') Logout
